<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="v1-1" author="Vasilev Danil">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="places"/>
            </not>
        </preConditions>
        <createTable tableName="places">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="slug" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(5000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-2" author="Vasilev Danil">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="events"/>
            </not>
        </preConditions>
        <createTable tableName="events">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="place_id" type="uuid">
                <constraints references="places(id)" foreignKeyName="fk_events_place_id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>